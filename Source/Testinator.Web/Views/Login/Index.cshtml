@model Testinator.Web.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.TextBoxFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.TextBoxFor(model => model.Password)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Zaloguj", "LoginAsync", new { /* id = Model.PrimaryKey */ })
</div>
