@model Testinator.Web.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div>
    @using (Html.BeginForm("RegisterAsync", "Account", FormMethod.Post))
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SecondName)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.SecondName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.Password)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ConfirmPassword)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.ConfirmPassword)
            </dd>
        </dl>
        <div>
            <input type="submit" value="Zarejestruj" class="btn btn-primary" />
        </div>
    }
</div>
